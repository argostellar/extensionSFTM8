{
    "manifest_version": 2,
 
    "name": "Websites List",
    "description": "This extension will show the list of uploaded sites",
    "version": "1.0",

    "icons": {
		"16": "images/16x16.png",
		"32": "images/32x32.png",
		"64": "images/64x64.png",
		"128": "images/128x128.png"
	},
 
    "browser_action": {
    	"default_title": "Open websites list",
        "default_icon": "images/32x32.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab",
        "tabs",
        "http://www.softomate.net/ext/employees/list.json"
    ]
}